@model Personal_Finance_Model.MasterModel.expense_categoryModel
@using (Html.BeginForm("saveOrUpdate", "ExpenseCategory", FormMethod.Post))
{
    <br>
    <h2 class="bg-dark text-white text-center">Category</h2>
    <div class="row">
        @Html.HiddenFor(m => m.category_id)
        <div class="col-md-3">
            <label>User ID</label>
            @Html.TextBoxFor(m => m.user_id, new { @class = "form-control" })
        </div>     
        
        <div class="col-md-3">
            <label>Category Name</label>
            @Html.TextBoxFor(m => m.category_name, new { @class = "form-control" })
        </div>
    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-success mt-2">Submit</button>
        @Html.ActionLink("Report", "Report", null, new { @class = "btn btn-outline-success mt-2" })
    </div>

}
