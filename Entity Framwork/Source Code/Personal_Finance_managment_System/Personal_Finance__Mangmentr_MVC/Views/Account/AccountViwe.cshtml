@model Personal_Finance_Model.MasterModel.AccountModel
@using (Html.BeginForm("saveOrUpdate", "Account", FormMethod.Post))
{
    <br>
    <h2 class="bg-dark text-white text-center">Account Information</h2>
    <div class="row">
        @Html.HiddenFor(m => m.account_id)
        <div class="col-md-3">
            <label>Create Account</label>
            @Html.TextBoxFor(m => m.account_type, new { @class = "form-control" })
        </div>     
    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-success mt-2">Submit</button>
        @Html.ActionLink("Report", "Report", null, new {@class = "btn btn-outline-success mt-2" })
    </div>
}

