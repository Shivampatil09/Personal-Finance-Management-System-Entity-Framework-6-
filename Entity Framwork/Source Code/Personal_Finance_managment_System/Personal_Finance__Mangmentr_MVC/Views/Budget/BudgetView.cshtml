@model Personal_Finance_Model.MasterModel.budgetModel
@using (Html.BeginForm("saveOrUpdate", "Budget", FormMethod.Post))
{
    <br>
    <h2 class="bg-dark text-white text-center">Budget Infromation</h2>

    <div class="row">
        @Html.HiddenFor(m => m.budget_id)
        <div class="col-md-3">
            <label>User ID</label>
            @Html.TextBoxFor(m => m.user_id, new { @class = "form-control" })
        </div>  
        
        <div class="col-md-3">
            <label>Expence Category</label>
            @Html.TextBoxFor(m => m.expense_category, new { @class = "form-control" })
        </div>    
        
        <div class="col-md-3">
            <label>Amount</label>
            @Html.TextBoxFor(m => m.amount, new { @class = "form-control" })
        </div>

    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-success mt-2">Save</button>
        @Html.ActionLink("Report", "Report", null, new { @class = "btn btn-outline-success mt-2" })
    </div>
}
