@model Personal_Finance_Model.MasterModel.target_amountModel
@using (Html.BeginForm("SaveOrUpdate", "TargetAmont", FormMethod.Post))
{
    <br>
    <h2 class="bg-dark text-white text-center">Target Amount</h2>
    <div class="row">
        @Html.HiddenFor(m => m.target_id)
        <div class="col-md-3">
            <label>User ID</label>
            @Html.TextBoxFor(m => m.user_id, new { @class = "form-control" })
        </div>

        <div class="col-md-3">
            <label>Amount</label>
            @Html.TextBoxFor(m => m.amount, new { @class = "form-control" })
        </div>
    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-success mt-2">Submit</button>
        @Html.ActionLink("Report", "Report", null, new { @class = "btn btn-outline-success mt-2" })
    </div>
}
